<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">

        <title>Realproperty</title>
        <%= stylesheet_link_tag 'explore', media: 'all'%>
        <%= csrf_meta_tags %>

        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

    </head>
    <body class="notransition">
        <%= render partial: "layouts/misc/header"%>
        <%= render partial: "layouts/misc/left_side"%>

        <div id="wrapper">
            <%= render partial: "misc/map_view"%>
            <div id="content">
                <div class="resultsList">
                    <div class="row">
                        <% @properties.each do |property|%>
                          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
                              <a href="<%= single_pages_path(property_id: property.id)%>" class="card">
                                  <div class="figure">
                                      <% image = @images[property.id].first %>
                                      <img src='<%= image.url%>' alt='image' />
                                      <div class="figCaption">
                                          <% unit_type = property.unit_types.first %>
                                          <div>Php <%=unit_type.cost%></div>
                                          <span class="icon-eye"> <%= property[:views]%></span>
                                          <span class="icon-heart"> <%= property[:likes]%></span>
                                          <span class="icon-bubble"> <%= property[:comments]%></span>
                                      </div>
                                      <div class="figView"><span class="icon-heart"></span></div>
                                      <div class="figType">FOR SALE</div>
                                  </div>
                                  <h2><%= property.name %></h2>
                                  <div class="cardAddress">
                                      <span class="icon-pointer"></span>
                                      <%= property.location%>
                                  </div>
                                  <div class="cardRating">
                                      <% (1..5).each do |i| %>
                                        <span class="fa fa-star"></span>
                                      <% end %>
                                  </div>
                                  <ul class="cardFeat">
                                      <li><span class="fa fa-moon-o"></span> <%= unit_type.bedrooms%></li>
                                      <li><span class="icon-drop"></span><%= unit_type.bathrooms%></li>
                                      <li><span class="icon-frame"></span><%= unit_type.floor_area%> sq m</li>
                                      <li><span></span>Php <%= unit_type.cost%></li>
                                  </ul>
                                  <div class="clearfix"></div>
                              </a>
                          </div>
                        <% end %>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>

        <script src="http://maps.googleapis.com/maps/api/js?sensor=true&amp;libraries=geometry&amp;libraries=places" type="text/javascript"></script>
        <%= javascript_include_tag 'explore'%>
        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        
          ga('create', "<%= ENV['GOOGLE_ANALYTICS_TRACKING_ID']%>", 'auto');
          ga('send', 'pageview');
        </script>
    </body>
</html>
