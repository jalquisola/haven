<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'zoner/application', media: 'all'%>
    <%= csrf_meta_tags %>
    <%= yield :header_script%>

    <meta property="fb:app_id" content="<%= ENV['FACEBOOK_APP_ID']%>" />
    <!-- Facebook Pixel Code -->
    <script>
    !function(f,b,e,v,n,t,s){if(f.fbq)return;n=f.fbq=function(){n.callMethod?
    n.callMethod.apply(n,arguments):n.queue.push(arguments)};if(!f._fbq)f._fbq=n;
    n.push=n;n.loaded=!0;n.version='2.0';n.queue=[];t=b.createElement(e);t.async=!0;
    t.src=v;s=b.getElementsByTagName(e)[0];s.parentNode.insertBefore(t,s)}(window,
    document,'script','//connect.facebook.net/en_US/fbevents.js');
    fbq('init', "<%= ENV['FACEBOOK_PIXEL']%>");
    fbq('track', "PageView");
    </script>
    <noscript><img height="1" width="1" style="display:none"
        src="https://www.facebook.com/tr?id=<%=ENV['FACEBOOK_PIXEL']%>&ev=PageView&noscript=1"
    /></noscript>
    <!-- End Facebook Pixel Code -->

    <%= yield :meta%>
    <title><%= @title%></title>
</head>

<body class="page-sub-page page-property-detail" id="page-top">
<!-- Wrapper -->
<div class="wrapper">
    <div class="navigation">
        <%= render partial: 'zoner/navigation'%>
    </div><!-- /.navigation -->

    <%= flash_messages %>
    <%= yield %>

    <footer id='page-footer'>
        <div class='inner'>
            <aside id=''>
                <div class='container'>
                    <span>Copyright Â© 2015. All Rights Reserved.</span>
                </div>
            </aside>
        </div>
    </footer>
</div>


<!--[if gt IE 8]>
<script type="text/javascript" src="assets/js/ie.js"></script>
<![endif]-->
<%= javascript_include_tag 'zoner/application'%>
<%= yield :script%>

<script>
  $(document).ready(function(){
    window.fbAsyncInit = function() {
      FB.init({
        appId      : "<%= ENV['FACEBOOK_APP_ID']%>",
        xfbml      : true,
        version    : 'v2.5'
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));

    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', "<%= ENV['GOOGLE_ANALYTICS_TRACKING_ID']%>", 'auto');
    ga('send', 'pageview');

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "http://maps.google.com/maps/api/js?sensor=false";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'google-maps'));

    (function(d, s, id){
       var link, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       link = d.createElement(s); link.id = id;
       link.href = "http://fonts.googleapis.com/css?family=Roboto:300,400,700";
       link.rel = "stylesheet";
       link.type = "text/css";
       fjs.parentNode.insertBefore(link, fjs);
     }(document, 'link', 'google-fonts'));

    $('.preload-image').each(function(){
        var $this = $(this);
        $this.attr('src', $this.data('src'));
    });

   });
</script>

</body>
</html>











