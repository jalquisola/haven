section id="contact-agent"
  header
    h2 Contact Agent
  div class="row"
    section class="agent-form"
      div class="col-md-7 col-sm-12"
        aside class="agent-info clearfix"
          figure
            a href="#"
              img alt="" src=agent.avatar_url
          div class="agent-contact-info"
            h3=agent.name
            p
            dl
              dt Email:
              dd
                a href="mailto:#{agent.email}"=agent.email
              dt Mobile:
              dd= agent.contact_no
              dt Viber:
              dd= agent.contact_no
              - if agent.linked_in_url.present?
                dt LinkedIn:
                dd
                  a href=agent.linked_in_url target='_blank' =agent.linked_in_url

              - if agent.twitter_url.present?
                dt Twitter:
                dd
                  a href=agent.twitter_url target='_blank' =agent.twitter_url

              - if agent.facebook_url.present?
                dt Facebook:
                dd
                  a href=agent.facebook_url target='_blank' =agent.facebook_url

              - if agent.skype.present?
                dt Skype:
                dd=agent.skype
            hr
      div class="col-md-5 col-sm-12"
        div class="agent-form"
          = form_for Enquiry.new, html: { id: 'form-contact-agent', class:'clearfix', role: 'form' } do |f|
            = hidden_field_tag :property_id, @property.id
            div class="form-group"
              label for="form-contact-agent-name"
                | Your Name
                em *
              = f.text_field :name, {type: 'text', class: 'form-control', id: 'form-contact-agent-name', required: ''}
            div class="form-group"
              label for="form-contact-agent-email"
                | Your Email
                em *
              = f.text_field :email, {type: 'email', class: 'form-control', id: 'form-contact-agent-email'}
            div class="form-group"
              label for="form-contact-agent-mobile_no"
                | Your Contact No
                em *
              = f.text_field :contact_no, {type: 'text', class: 'form-control', id: 'form-contact-agent-contact_no'}
            div class="form-group"
              label for="form-contact-agent-message"
                | Your Message
                em *
              textarea id='form-contact-agent-message' name='enquiry[content]' rows="10" class="form-control" required=''
                | I found this property on your website and would like more
                | &nbspinformation on "#{@property.name}".
                | &#13;&#10;&#13;&#10;Please be in touch with me as soon as possible.
                | &#13;&#10;&#13;&#10;Thank you.

            div class='form-group'
              = recaptcha_tags

            div class="form-group"
              button type="submit" class="btn pull-right btn-default" id="form-contact-agent-submit" Send a Message
            div id="form-contact-agent-status"
